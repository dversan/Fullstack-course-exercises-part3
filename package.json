  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dversan/Fullstack-course-exercises-part3/issues"
  },
  "homepage": "https://github.com/dversan/Fullstack-course-exercises-part3#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "standard": "^17.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
